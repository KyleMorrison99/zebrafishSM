@phdthesis{f206e52d43c390a4a475cc0a6f20a436820861e61aa8c4e3f42f54412faabcb5,
title = {{Toxizit{\"a}t von Umweltchemikalien und deren Mischungen auf ausgew{\"a}hlte aquatische Organismen {\textendash} Verhalten, Entwicklung und Biochemie ; Toxicity of environmental chemicals and their mixtures to selected aquatic organisms {\textendash} behaviour, development and biochemistry}},
author = {Kienle, Cornelia},
school = {{Universit{\"a}t T{\"u}bingen}},
url = {http://hdl.handle.net/10900/49293},
